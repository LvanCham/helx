<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_content"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorP14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_naem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="一年级上册全科"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_content"
        app:layout_constraintTop_toTopOf="@+id/iv_content"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格： "
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_naem"
        app:layout_constraintTop_toBottomOf="@id/tv_naem"
        android:layout_marginTop="10dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥99"
        android:textSize="12sp"
        android:textColor="@color/colorP5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pri"
        app:layout_constraintStart_toEndOf="@+id/tv_pri"
        app:layout_constraintTop_toTopOf="@+id/tv_pri" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_spe"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人教版 ：语文，体育，数学，英语"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_pri"
        app:layout_constraintTop_toBottomOf="@+id/tv_pri" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_spe_t"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="苏教版 ：语文，体育，数学，英语"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_spe"
        app:layout_constraintTop_toBottomOf="@+id/tv_spe" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科目版本"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_content"
        app:layout_constraintStart_toStartOf="@+id/iv_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_content"
        android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>