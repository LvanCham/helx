<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_timealxe_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pillar_cir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bg"
        android:layout_width="50dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@id/iv_timealxe_s"
        app:layout_constraintBottom_toBottomOf="@id/iv_timealxe_s"
        app:layout_constraintStart_toEndOf="@id/iv_timealxe_s"
        android:background="@color/colorP13"
        android:gravity=""
        />

    <com.cham.helx.widget.PillarView
        android:id="@+id/pina"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"

        app:layout_constraintBottom_toTopOf="@+id/iv_timealxe_s"
        app:layout_constraintEnd_toEndOf="@id/iv_timealxe_s"
        app:layout_constraintStart_toStartOf="@id/iv_timealxe_s"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分数"
        android:textSize="10sp"
        android:textColor="@color/colorP8"
        app:layout_constraintBottom_toTopOf="@id/pina"
        app:layout_constraintStart_toStartOf="@id/iv_timealxe_s"
        app:layout_constraintEnd_toEndOf="@id/iv_timealxe_s"
        />
</androidx.constraintlayout.widget.ConstraintLayout>